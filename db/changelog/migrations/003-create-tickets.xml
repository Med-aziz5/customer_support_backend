<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="003-create-tickets" author="MED AZIZ MATHLOUTHI">
        
        <!-- Enums -->
        <sql>
            CREATE TYPE ticket_priority AS ENUM ('LOW', 'MEDIUM', 'HIGH', 'URGENT');
        </sql>
        
        <sql>
            CREATE TYPE ticket_status AS ENUM ('PENDING', 'IN_PROGRESS', 'RESOLVED', 'CLOSED');
        </sql>

        <sql>
            CREATE TYPE ticket_category AS ENUM ('BUG', 'FEATURE_REQUEST', 'SUPPORT', 'BILLING');
        </sql>

        <!-- Tickets table -->
        <createTable tableName="tickets">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="assigned_to" type="BIGINT"/>

            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="priority" type="ticket_priority">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="ticket_status" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>

            <column name="category" type="ticket_category">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="deleted_at" type="TIMESTAMP"/>
        </createTable>

        <!-- Foreign keys -->
        <addForeignKeyConstraint baseTableName="tickets" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_tickets_users_id" onDelete="SET NULL"/>

        <addForeignKeyConstraint baseTableName="tickets" baseColumnNames="assigned_to"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_tickets_users_assigned_to" onDelete="SET NULL"/>

    </changeSet>

</databaseChangeLog>
