<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- Initial creation of users table -->
    <changeSet id="001-create-users" author="MED AZIZ MATHLOUTHI">
        <sql>
            CREATE TYPE role_enum AS ENUM ('CLIENT', 'AGENT', 'ADMIN');
        </sql>
        <sql>
            CREATE TYPE status_enum AS ENUM ('ACTIVE', 'INACTIVE', 'SUSPENDED', 'DELETED', 'PENDING');
        </sql>

        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="role" type="role_enum">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="status_enum" defaultValue="PENDING"/>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="suspended_at" type="TIMESTAMP"/>
            <column name="suspension_reason" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="deleted_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
